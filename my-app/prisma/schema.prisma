generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Add your models below

model Passenger {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String
  naCode      String
  trips       Trip[]  // 0..* trips for each passenger
}

model Trip {
  id               Int      @id @default(autoincrement())
  ticketCode       String
  tripCode         String
  originCity       String
  destinationCity  String
  originID         Int
  originName       String
  destName         String
  carName          String
  serviceName      String
  startsAt         DateTime
  originAttitude   Float
  originLatitude   Float
  passengerId      Int
  passenger        Passenger @relation(fields: [passengerId], references: [id])
}
