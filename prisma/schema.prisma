generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/client"
  previewFeatures = []
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Passenger {
  id          Int        @id @default(autoincrement())
  Firstname   String
  Lastname    String
  NumberPhone String     @unique
  NaCode      String?
  Locations   Location[]
  Trips       Trip[]
}

model Trip {
  id                    Int        @id @default(autoincrement())
  TicketCode            String     @unique
  TripCode              String?
  Origin_id             Int
  Destination_id        Int
  OriginCity            String
  DestinationCity       String
  CarName               String
  ServiceName           String
  StartsAt              DateTime
  passengerId           Int
  locationId            Int?
  PassengerSmsSent      Boolean
  AdminApproved         Boolean
  status                TripStatus @default(wating_info)
  SecureToken           String     @unique
  driverId              Int?
  originLocationId      Int?
  destinationLocationId Int?
  DestinationLocation   Location?  @relation("TripDestination", fields: [destinationLocationId], references: [id])
  Driver                Driver?    @relation(fields: [driverId], references: [id])
  Location              Location?  @relation("TripLocation", fields: [locationId], references: [id])
  OriginLocation        Location?  @relation("TripOrigin", fields: [originLocationId], references: [id])
  Passenger             Passenger  @relation(fields: [passengerId], references: [id])
}

model Driver {
  id          Int     @id @default(autoincrement())
  Firstname   String
  Lastname    String
  CarName     String?
  PhoneNumber String
  Trip        Trip[]
}

model Location {
  id               Int       @id @default(autoincrement())
  Latitude         Float?
  Longitude        Float?
  Description      String?
  TextAddress      String?
  PhoneNumber      String?
  passengerId      Int
  Passenger        Passenger @relation(fields: [passengerId], references: [id])
  DestinationTrips Trip[]    @relation("TripDestination")
  Trips            Trip[]    @relation("TripLocation")
  OriginTrips      Trip[]    @relation("TripOrigin")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  isAdmin       Boolean   @default(false)
  image         String?
  isSuperAdmin  Boolean   @default(false)
  phoneNumber   String?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AdminOtp {
  phone      String   @id
  code       String
  expiresAt  DateTime
  attempts   Int      @default(0)
  lastSentAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([expiresAt])
}

enum TripStatus {
  wating_info
  wating_location
  wating_start
  intrip
  done
  canceled
}
