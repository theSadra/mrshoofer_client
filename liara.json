{
  "platform": "docker",
  "app": "mrshoofer-client",
  "port": 3000,
  "healthCheck": {
    "command": "curl -f http://localhost:3000/api/health || exit 1",
    "path": "/api/health",
    "initialDelaySeconds": 30,
    "periodSeconds": 10,
    "timeoutSeconds": 5,
    "failureThreshold": 3
  },
  "build": {
    "dockerfile": "Dockerfile"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}
